              .sticky
                %nav.top-bar{"data-topbar" => "", :role => "navigation", "data-option" => "sticky_on: large"}
                  %ul.title-area
                    %li.name
                    %li.toggle-topbar.menu-icon
                      %a{href:"#"}
                        %span Menu
                  %section.top-bar-section
                    %ul.left
                      %li
                        %a{href:"#"} HOME
                      %li.has-dropdown
                        %a{href:"#"} MENU
                        %ul.dropdown.radius-bot
                          %li
                            %a{href:"#"} LOREM IPSUM DOLOR
                          %li.has-dropdown
                            %a{href:"#"} CONSE CTETUR
                            %ul.dropdown.radius-bot.radius-top
                              %li
                                %a{href:"#"} HOME
                              %li
                                %a{href:"#"} HOME
                              %li
                                %a{href:"#"} HOME
                              %li
                                %a{href:"#"} HOME
                          %li
                            %a{href:"#"} ELIT SED DO EIUSMOD
                          %li
                            %a{href:"#"} INCIDIDUNT UT
                      %li
                        %a{href:"#"} GALLERY
                      %li
                        %a{href:"#"} ABOUT
                      %li
                        %a{href:"#"} CONTACTS
      .content.wow.animated.fadeInLeft
        .row
          .large-3.columns
          .large-3.columns
          .large-3.columns
