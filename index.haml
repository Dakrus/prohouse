    :javascript
      $(document).foundation();
    :javascript
      jQuery("document").ready(function($){
        var nav = $('.header-in');
        $(window).scroll(function () {
          if ($(this).scrollTop() > 36) {
            nav.addClass("fadeInDown");
          } else {
            nav.removeClass("fadeInDown");
          }
        });
        var top = $('.logo');
        $(window).scroll(function () {
          if ($(this).scrollTop() > 36) {
            top.addClass("logo-min");
            top.removeClass("logo-full");
          } else {
            top.removeClass("logo-min");
            top.addClass("logo-full");
          }
        });
        var cbw = $('.w-1');
        $(window).scroll(function() {
          if ($(this).scrollTop() > 200) {
            cbw.addClass("fadeInUp");
            cbw.addClass("animated");
            } else {
            cbw.removeClass("fadeInUp");
            cbw.removeClass("animated");
            }
            });
        var cba = $('.w-2');
        $(window).scroll(function() {
          if ($(this).scrollTop() > 1000) {
            cba.addClass("fadeInUp");
            cba.addClass("animated");
            } else {
            cba.removeClass("fadeInUp");
            cba.removeClass("animated");
            }
            });
        var left = $('.l-2');
        $(window).scroll(function() {
          if ($(this).scrollTop() > 200) {
            left.addClass("fadeInRight");
            left.addClass("animated");
            } else {
            left.removeClass("fadeInRight");
            left.removeClass("animated");
            }
            });
        var left1 = $('.l-3');
        $(window).scroll(function() {
          if ($(this).scrollTop() > 300) {
            left1.addClass("fadeInRight");
            left1.addClass("animated");
            } else {
            left1.removeClass("fadeInRight");
            left1.removeClass("animated");
            }
            });
      });
